<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arkan.arkan.Activities.LoginActivity"
    android:background="@drawable/login_activity_background_xlarge">
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:id="@+id/login_background"
        android:background="@drawable/login_bg_xlarge"/>

    <Button
        android:layout_height="50dp"
        android:layout_marginBottom="70dp"
        android:layout_alignBottom="@+id/login_background"
        android:layout_centerHorizontal="true"
        android:layout_width="450dp"
        android:id="@+id/login_btn"
        android:text="Sign In"
        android:background="@color/sign_in_btn_color"
        android:textColor="#ffffff"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_above="@+id/login_btn"
        android:layout_alignStart="@+id/login_btn"
        android:layout_marginBottom="105dp"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        android:background="@android:color/transparent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/username_text"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_above="@+id/login_btn"
        android:layout_alignStart="@+id/login_btn"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_marginBottom="45dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:background="@android:color/transparent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/password_text"/>

</RelativeLayout>
